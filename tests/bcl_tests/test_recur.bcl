
LET FACTORIAL_RECURSIVE(N) = VALOF AS INTEGER
$(
  IF N = 0 THEN RESULTIS 1
  WRITES(" N = ") WRITEN(N) WRITEC(10)
  RESULTIS N * FACTORIAL_RECURSIVE(N - 1)
$)


LET START()  BE
$(

  LET N = 19
  LET R = FACTORIAL_RECURSIVE(N)
  WRITES("Calculating recursive Factorial of ")
  WRITEN(N)
  WRITES(" = ") WRITEN(R)
  WRITEC(10)
$)
