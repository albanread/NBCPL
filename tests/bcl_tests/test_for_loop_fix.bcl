// Simple test to verify for loop variable symbol table fix
// Tests basic for loop functionality with nested scopes

LET test_simple_for() BE $(
    LET sum = 0

    FOR I = 1 TO 10 DO $(
        sum := sum + I
    $)

    WRITEF("Sum from 1 to 10: %d*N", sum)
$)

LET test_nested_for() BE $(
    LET total = 0

    FOR I = 1 TO 3 DO $(
        FOR J = 1 TO 3 DO $(
            total := total + (I * J)
        $)
    $)

    WRITEF("Nested loop total: %d*N", total)
$)

LET START() BE $(
    WRITEF("Testing for loop variable symbol table fix...*N")
    test_simple_for()
    test_nested_for()
    WRITEF("Test completed successfully!*N")
$)
