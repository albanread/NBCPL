LET FACTORIAL_RECURSIVE(N) = VALOF
$(
  IF N = 0 THEN RESULTIS 1
  RESULTIS N * FACTORIAL_RECURSIVE(N - 1)
$)

LET START() BE
$(
  WRITES("Testing N=0: ")
  WRITEN(FACTORIAL_RECURSIVE(0))
  WRITES("*N")

  WRITES("Testing N=1: ")
  WRITEN(FACTORIAL_RECURSIVE(1))
  WRITES("*N")

  WRITES("Testing N=3: ")
  WRITEN(FACTORIAL_RECURSIVE(3))
  WRITES("*N")

  FINISH
$)
