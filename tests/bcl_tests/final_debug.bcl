LET FACTORIAL_RECURSIVE(N) = VALOF
$(
  IF N = 0 THEN RESULTIS 42424242
  RESULTIS 99999999
$)

LET START() BE
$(
  WRITES("Testing N=0: ")
  WRITEN(FACTORIAL_RECURSIVE(0))
  WRITES("*N")

  WRITES("Testing N=1: ")
  WRITEN(FACTORIAL_RECURSIVE(1))
  WRITES("*N")

  WRITES("Testing N=5: ")
  WRITEN(FACTORIAL_RECURSIVE(5))
  WRITES("*N")

  FINISH
$)
