LET START() BE {
    // Test with distinctive values to identify bit extraction issues
    WRITEF("=== QUAD Bit Layout Debug ===*N")

    // Test 1: Powers of 2 to identify which bits are being extracted
    LET q1 = QUAD(1, 2, 4, 8)
    WRITEF("QUAD(1, 2, 4, 8) hex: %X*N", q1)

    LET a1 = q1.first
    LET b1 = q1.second
    LET c1 = q1.third
    LET d1 = q1.fourth

    WRITEF("Components: %N %N %N %N*N", a1, b1, c1, d1)

    // Test 2: Use values that will show sign extension issues
    LET q2 = QUAD(100, 200, 300, 400)
    WRITEF("QUAD(100, 200, 300, 400) hex: %X*N", q2)

    LET a2 = q2.first
    LET b2 = q2.second
    LET c2 = q2.third
    LET d2 = q2.fourth

    WRITEF("Components: %N %N %N %N*N", a2, b2, c2, d2)

    // Test 3: Negative values to check sign extension
    LET q3 = QUAD(-1, -2, -3, -4)
    WRITEF("QUAD(-1, -2, -3, -4) hex: %X*N", q3)

    LET a3 = q3.first
    LET b3 = q3.second
    LET c3 = q3.third
    LET d3 = q3.fourth

    WRITEF("Components: %N %N %N %N*N", a3, b3, c3, d3)
}
