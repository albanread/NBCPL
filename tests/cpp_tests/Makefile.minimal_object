# Makefile for minimal_object_test (Object List Testing)
# Simple test to debug object list functionality

CXX = clang++
CXXFLAGS = -std=c++17 -Wall -Wextra -O2 -g
INCLUDES = -I. -I../../HeapManager -I../../runtime -I../../include
LIBS = ../../libbcpl_runtime_sdl2_static.a -lpthread \
       -framework CoreFoundation -framework CoreAudio -framework AudioToolbox \
       -framework CoreGraphics -framework AppKit -framework IOKit \
       -framework ForceFeedback -framework Carbon -framework CoreHaptics \
       -framework GameController -framework Metal -framework QuartzCore

# Target executable
TARGET = minimal_object_test

# Source files
MAIN_SRC = minimal_object_test.cpp

# Default target
all: $(TARGET)

# Main executable
$(TARGET): $(TARGET).o
	@echo "Linking minimal_object_test executable..."
	$(CXX) $(CXXFLAGS) -o $@ $^ $(LIBS)

# Main test source
$(TARGET).o: $(MAIN_SRC)
	@echo "Compiling minimal_object_test.cpp..."
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c $< -o $@

# Clean up build artifacts
clean:
	@echo "Cleaning minimal_object_test build artifacts..."
	rm -f $(TARGET) $(TARGET).o

# Force rebuild
rebuild: clean all

# Run the test
test: $(TARGET)
	@echo "Running minimal_object_test..."
	./$(TARGET)

# Run test with debug output
test-debug: $(TARGET)
	@echo "Running minimal_object_test with debug..."
	lldb ./$(TARGET)
