// Simple test for PAIR negative values and lane accessors

LET START() BE $(
    WRITEF("Testing PAIR with negative values*N")

    LET p1 = PAIR(-5, 15)
    WRITEF1("PAIR(-5, 15) = %P*N", p1)

    LET p2 = PAIR(25, -10)
    WRITEF1("PAIR(25, -10) = %P*N", p2)

    LET p3 = PAIR(-30, -40)
    WRITEF1("PAIR(-30, -40) = %P*N", p3)

    WRITEF("*NTesting lane accessors:*N")

    // Test reading lanes
    LET first = p1.|0|
    LET second = p1.|1|
    WRITEF2("p1.|0| = %N, p1.|1| = %N*N", first, second)

    // Test writing lanes
    LET p4 = PAIR(100, 200)
    WRITEF1("Before: p4 = %P*N", p4)
    p4.|0| := 50
    p4.|1| := 75
    WRITEF1("After lane writes: p4 = %P*N", p4)

    WRITEF("Test complete*N")
$)
